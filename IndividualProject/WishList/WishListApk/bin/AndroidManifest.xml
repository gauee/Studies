<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.gauee.wishlist.apk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-feature android:name="android.hardware.camera" >
    </uses-feature>

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.gauee.wishlist.apk.activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.gauee.wishlist.apk.activities.PreviewActivity"
            android:label="@string/title_activity_preview"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name="pl.gauee.wishlist.apk.activities.ListPreviewActivity"
            android:label="@string/title_activity_list_preview" >
        </activity>
        <activity
            android:name="pl.gauee.wishlist.apk.activities.ListAddActivity"
            android:label="@string/title_activity_list_add" >
        </activity>
        <activity
            android:name="pl.gauee.wishlist.apk.activities.ListDeleteActivity"
            android:label="@string/title_activity_list_delete" >
        </activity>
        <activity
            android:name="pl.gauee.wishlist.apk.activities.ListItemsPreviewActivity"
            android:label="@string/title_activity_list_items_preview" >
        </activity>
        <activity
            android:name="pl.gauee.wishlist.apk.activities.ItemDetailsActivity"
            android:label="@string/title_activity_item_details" >
        </activity>
        <activity
            android:name="pl.gauee.wishlist.apk.activities.UserPreview"
            android:label="@string/title_activity_user_preview" >
        </activity>
    </application>

</manifest>